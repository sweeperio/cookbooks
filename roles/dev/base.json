{
  "name": "dev--base",
  "description": "base role for dev machines",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "run_list": [
    "recipe[user::data_bag]",
    "recipe[base]",
    "recipe[sudo]",
    "recipe[memcached]",
    "recipe[redisio]",
    "recipe[redisio::enable]",
    "recipe[tmux]",
    "recipe[fasd]"
  ],
  "default_attributes": {
    "authorization": {
      "sudo": {
        "groups": ["sudoers"],
        "passwordless": true
      }
    },
    "packages": ["curl", "ruby-dev", "libssl-dev", "libreadline-dev", "silversearcher-ag"],
    "chruby": {
      "auto_switch": true,
      "rubies": {
        "1.9.3-p392": false,
        "2.1.7": true,
        "2.2.3": true
      },
      "default": "2.2.3"
    },
    "memcached": {
      "listen": "127.0.0.1"
    },
    "tmux": {
      "install_method": "source"
    }
  }
}

