{
  "name": "dev--base",
  "description": "base role for dev machines",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "run_list": [
    "recipe[user::data_bag]",
    "recipe[base]",
    "recipe[dev]",
    "recipe[sudo]",
    "recipe[fasd]",
    "recipe[golang::packages]",
    "recipe[memcached]",
    "recipe[nodejs]",
    "recipe[phantomjs]",
    "recipe[postgresql::server]",
    "recipe[redisio]",
    "recipe[redisio::enable]",
    "recipe[tmux]"
  ],
  "default_attributes": {
    "authorization": {
      "sudo": {
        "users": ["vagrant"],
        "groups": ["sudoers"],
        "passwordless": true
      }
    },
    "packages": ["curl", "ruby-dev", "libssl-dev", "libreadline-dev", "silversearcher-ag"],
    "chruby": {
      "auto_switch": true,
      "rubies": {
        "1.9.3-p392": false,
        "2.1.7": true,
        "2.2.3": true
      },
      "default": "2.2.3"
    },
    "go": {
      "owner": "vagrant",
      "group": "vagrant",
      "gopath": "/home/vagrant/go",
      "packages": ["launchpad.net/gocheck", "github.com/tools/godep"]
    },
    "memcached": {
      "listen": "127.0.0.1"
    },
    "nodejs": {
      "npm_packages": [
        { "name": "coffee-script" },
        { "name": "grunt-cli" }
      ]
    },
    "postgresql": {
      "config": {
        "listen_addresses": "*"
      },
      "password": {
        "postgres": "64fc049300cbb7564395edd78403c22c"
      },
      "pg_hba": [
        { "type": "local", "db": "all", "user": "postgres", "addr": "", "method": "ident" },
        { "type": "local", "db": "all", "user": "all", "addr": "", "method": "ident" },
        { "type": "host", "db": "all", "user": "all", "addr": "127.0.0.1/32", "method": "md5" },
        { "type": "host", "db": "all", "user": "all", "addr": "::1/128", "method": "md5" },
        { "type": "host", "db": "all", "user": "all", "addr": "192.168.0.0/16", "method": "trust" }
      ]
    },
    "tmux": {
      "install_method": "source"
    }
  }
}

