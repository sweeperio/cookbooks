{
  "name": "server--base",
  "description": "base role for servers",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "run_list": [
    "recipe[user::data_bag]",
    "recipe[base]",
    "recipe[sudo]"
  ],
  "default_attributes": {
    "users": ["david_muto", "deploy"],
    "authorization": {
      "sudo": {
        "groups": ["sudoers"],
        "passwordless": true
      }
    },
    "packages": ["curl", "ruby-dev", "libssl-dev", "libreadline-dev"],
    "chruby": {
      "auto_switch": true,
      "rubies": {
        "1.9.3-p392": false,
        "2.2.2": true
      },
      "default": "2.2.2"
    }
  }
}
